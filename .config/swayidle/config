lock 'pidof hyprlock || hyprlock --grace 10'
before-sleep 'loginctl lock-session'
after-resume 'niri msg action power-on-monitors'

timeout 150 'brightnessctl -s set 10' resume 'brightnessctl -s set 10'
timeout 150 'brightnessctl -sd rgb:kbd_backlight set 0' resume 'brightnessctl -rd rgb:kbd_backlight'
timeout 900 'loginctl lock-session'
timeout 1800 'niri msg action power-off-monitors' resume 'niri msg action power-off-monitors'
timeout 7200 'systemctl suspend'

